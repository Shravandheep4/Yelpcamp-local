<% include ../partials/header%>
    
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>    
            <p>View our handpicked campgorunds from all over the world</p>
        
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a></p>
        </div>
    </header>

    <div class= "row text-center" style="display:flex; flex-wrap: wrap;">
            
        <% campgrounds.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
                <div class="thumbnail"><img class="img-thumbnail" src="<%=camp.image%>"></div>
                <div class="caption"> 
                    <h4> <%= camp.name %></h4>
                    <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">More info</a>
                </div>
            <br><br>
        </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>